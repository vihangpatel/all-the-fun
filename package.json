{
	"name": "react-india-website",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"heroku-postbuild": "npm run build",
		"start": "node public/build/server.js -p $PORT",
		"babel-server": "ENV=development babel-node ./reactor/server.js",
		"serve-dev": "npm run kill && npm run babel-server",
		"clean": "rimraf ./public/build",
		"build": "npm run clean && (npm run build-server &) && (npm run build-client)",
		"build-server": "webpack --config webpack.server.js --mode=production",
		"build-client": "webpack --config webpack.client.js --mode=production",
		"dev": "nodemon --watch ./reactor --watch ./public/assets/css --exec npm run build-dev",
		"test": "echo \"Error: no test specified\" && exit 1",
		"kill": "lsof -i tcp:7070 | grep LISTEN | awk '{print $2}' | xargs kill -9",
		"build-dev": "webpack-dev-server --hot --config dev.client.js",
		"start-dev": "ENV=development && nodemon --delay 3 --watch ./reactor --watch ./public/assets/css --exec npm run serve-dev"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/manjula91/all-the-fun.git"
	},
	"author": "",
