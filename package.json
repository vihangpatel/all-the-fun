	},
	"homepage": "https://github.com/manjula91/all-the-fun#readme",
	"dependencies": {
		"compression": "^1.7.3",
		"critical": "^1.3.4",
		"express": "^4.16.4",
		"helmet": "^3.14.0",
		"heroku-ssl-redirect": "0.0.4",
		"nodemon": "^1.18.5",
		"path": "^0.12.7",
		"react": "next",
		"react-countdown-now": "^2.1.1",
		"react-dom": "next",
		"react-router": "^4.3.1",
		"react-router-dom": "^4.3.1",
		"redirect-ssl": "^1.4.0",
		"webpack": "^4.23.1",
		"webpack-cli": "^3.1.2",
		"webpack-node-externals": "^1.7.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.3.3",
		"@babel/node": "^7.2.2",
		"@babel/plugin-proposal-class-properties": "^7.3.3",
